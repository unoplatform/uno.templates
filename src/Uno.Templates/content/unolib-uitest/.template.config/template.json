{
  "$schema": "http://json.schemastore.org/template",
  "author": "Uno Platform",
  "classifications": [
    "Multi-platform",
    "Uno Platform",
    "UITest",
    "Android",
    "iOS",
    "macOS",
    "WebAssembly"
  ],
  "name": "Uno Platform UI Tests Class Library",
  "identity": "Uno.Platform.UITestLibrary",
  "groupIdentity": "Uno.Platform.BlankUITestLibrary",
  "description": "Project template for creating UI Tests with the Uno Platform.",
  "precedence": "6001",
  "tags": {
    "language": "C#",
    "type": "project"
  },
  "shortName": "unoapp-uitest",
  "sourceName": "UnoUITestsLibrary",
  "defaultName": "UnoApp.UITests",
  "placeholderFilename": "template-ignore",
  "preferNameDirectory": false,
  "guids": [
    "99E19497-29A6-4B77-B773-BEC55F9B55DC" // .NET Standard Library
  ],
  "symbols": {
    "unoUITestHelpersVersion": {
      "type": "parameter",
      "datatype": "text",
      "defaultValue": "DefaultUnoUITestHelpersVersion",
      "replaces": "$UnoUITestHelpersVersion$"
    },
    "tfm": {
      "displayName": "Target Framework",
      "type": "parameter",
      "datatype": "choice",
      "enableQuotelessLiterals": true,
      "replaces": "$baseTargetFramework$",
      "defaultValue": "net9.0",
      "description": "Select the .NET version of your solution",
      "choices": [
        {
          "choice": "net9.0",
          "displayName": ".NET 9.0",
          "description": "Target .NET 9.0 (Standard Term Support)"
        },
        {
          "choice": "net10.0",
          "displayName": ".NET 10.0",
          "description": "Target .NET 10.0 (Preview)"
        }
      ]
    },
    "assertionLibrary": {
      "displayName": "Assertion Library",
      "type": "parameter",
      "datatype": "choice",
      "defaultValue": "none",
      "enableQuotelessLiterals": true,
      "allowMultipleValues": false,
      "isEnabled": "tests != none",
      "description": "Choose the assertion library for tests",
      "choices": [
        {
          "choice": "none",
          "displayName": "No Assertion Library",
          "description": "Do not use any specific assertion library and only use the built-in assertions provided by the test framework"
        },
        {
          "choice": "Shouldly",
          "displayName": "Shouldly",
          "description": "Use Shouldly for assertions in tests"
        },
        {
          "choice": "FluentAssertions",
          "displayName": "Fluent Assertions",
          "description": "Use Fluent Assertions for assertions in tests"
        }
      ]
    },
    "useFluentAssertions": {
      "type": "computed",
      "value": "(assertionLibrary == FluentAssertions)"
    },
    "useShouldly": {
      "type": "computed",
      "value": "(assertionLibrary == Shouldly)"
    }
  },
  "primaryOutputs": [
    {
      "path": "UnoUITestsLibrary.csproj"
    }
  ],
  "postActions": [
    {
      "description": "Add projects to the existing solution",
      "manualInstructions": [],
      "primaryOutputIndexes": "0",
      "actionId": "D396686C-DE0E-4DE6-906D-291CD29FC5DE",
      "continueOnError": true
    }
  ],
  "sources": [
    {
      "modifiers": [
      ]
    }
  ]
}
