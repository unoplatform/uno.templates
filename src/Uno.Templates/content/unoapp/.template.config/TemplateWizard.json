	"MetaData": {
		"appId": {
			"Icon": "/Assets/Application.ID.svg",
			"Validation": {
				"IsRequired": true,
				"Regex": "^[a-zA-Z]+(\\.[a-zA-Z0-9_]+)*$",
				"Message": "Invalid Application ID"
			},
			"Requires": {
				"platforms": {
					"RequiredValues": [
						"maccatalyst",
						"ios",
						"android"
					],
					"MoreInformation": "Application ID is only used for mobile (iOS, Android, MacCatalyst) platform"
				}
			}
		},
		"publisher": {
			"Icon": "/Assets/Application.Publisher.svg",
			"Validation": {
				"IsRequired": true,
				"Message": "Missing Publisher"
